<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Convert_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(TEXT(LeadStage__c) == &apos;Converted&apos;, ISBLANK(OpportunityName__c))</errorConditionFormula>
    <errorMessage>You cannot arbitrarily change the Stage to Converted. Please use the Convert function</errorMessage>
</ValidationRule>
